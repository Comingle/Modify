<div class="app-main">
  {{partial "header"}}
  <div class="row">
    <div class="main-column">
      <div id="pattern-grid-controls">
        {{#if selectedPattern}}
          <div id="controls">
            {{#if selectedPattern.active}}
              <a {{action "stopPlayingPattern"}} id="play-pause-wrapper">
                <span class="glyphicon glyphicon-pause playback-btn"></span>
                <span class="playback-btn-label">Pause</span>
              </a>
            {{else}}
              <a {{action "startPlayingPattern"}} id="play-pause-wrapper">
                <span class="glyphicon glyphicon-play playback-btn"></span>
                <span class="playback-btn-label">Let's play!</span>
              </a>
            {{/if}}
            <a {{action null}} class="playback-btn-label" id="play-pause-next"><span>Next</span></a>
            <a {{action null}} class="playback-btn-label" id="play-pause-previous"><span>Previous</span></a>
          </div>
        {{else}}
          <div id="controls">
          </div>
        {{/if}}
        {{frames-graph frames=shownFrames}}
      </div>
    </div>
  </div>
  <div class="row">
    <header class="main-column">
      <h1>Pleasure Playlist</h1>
      <button class="btn save-button">Save Playlist</button>
    </header>
  </div>
  {{#each pattern in currentPatterns}}
    {{patterns/basic-pattern
      pattern=pattern
      activatePattern='activatePattern'
      startPlayingPattern='startPlayingPattern'
      stopPlayingPattern='stopPlayingPattern'
      maxValueChanged='maxOptionValueChanged'
    }}
  {{/each}}
  <div class="row">
    <div class="main-column">
      <div class="list-item-add" {{action 'chooseNewPatterns'}}>
        <span class="glyphicon glyphicon-plus list-item-prefix"></span>
        <span class="list-item-name">Add more patterns</span>
      </div>
    </div>
  </div>
</div>
