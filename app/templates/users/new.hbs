<h1> new users </h1>

  {{model.username}}

  <div class="container">
    <form {{action "createUser" on="submit"}}>
      <h2>Create User</h2>
      <div class="form-group">
        <label for='username'>Username</label>
        {{input value=model.username id='username' class="form-control"}}
      </div>

      <div class="form-group">
        <label for='email'>Email</label>
        {{input value=model.email id='email' class="form-control"}}
      </div>

      <div class="form-group">
        <label for='password'>Password</label>
        {{input type="password" value=model.password id='password' class="form-control"}}
      </div>

      <div class="form-group">
        <label for='password-confirmation'>Password confirmation</label>
        {{input type="password" value=model.passwordConfirmation id='password-confirmation' class="form-control"}}
      </div>

      <div class="form-group">
        <label for='avatar'>Avatar</label>
        {{input type="avatar" value=model.avatar id='avatar' class="form-control"}}
      </div>

      <button class="btn btn-primary btn-block" type="submit">Save</button>
    </form>
  </div>
